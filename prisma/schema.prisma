generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id          Int     @id @default(autoincrement())
  email       String  @unique
  password    String
  name        String?
  ownedItems  Item[]
}

model Item{
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  price       Decimal
  owner       User    @relation(fields: [ownerId], references: [id])
  ownerId     Int
}
